command autorandr
out=$!
while [[ $# -gt 0 ]]; do
      case "$1" in
         --save|-s)
           LID_STATE=$(cat /proc/acpi/button/lid/LID/state)
           shift
           CONFIG=$1
           BLOCK="$HOME/.config/autorandr/$CONFIG/block"
           cat > "$BLOCK" <<EOF
#!/bin/sh
grep -v -q "${LID_STATE}" /proc/acpi/button/lid/LID/state
EOF
           chmod +x -- "$BLOCK"
           ;;
      esac
      shift
done
return $out
